{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
